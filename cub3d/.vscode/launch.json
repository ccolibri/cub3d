        {
            "name": "gcc - Сборка и отладка активного файла",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/cub3D",
            "args": ["map.cub"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
